{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "baseUrl": "./",
    "types": ["jest"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": ["**/*.spec.ts", "**/*.d.ts"],
  "exclude": ["../out-tsc/spec"]
}
