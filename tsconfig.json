{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  }
}
